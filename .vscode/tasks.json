{
    // 說明見:https://code.visualstudio.com/docs/editor/tasks
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "gulp(from workplace)",
            "type": "shell",
            "command": "gulp",
            "args": [
                "--newcwd",
                "${fileDirname}",
                "--file",
                "${fileBasename}"
            ],
            "problemMatcher": [
                "$gulp-tsc"
            ],
            "group": "build"
        },
        {
            "taskName": "gulp(from folder)",
            "type": "shell",
            "command": "gulp",
            "args": [
                "--cwd",
                "${fileDirname}"
            ],
            "problemMatcher": [
                "$gulp-tsc"
            ],
            "group": "build"
        }
    ]
}