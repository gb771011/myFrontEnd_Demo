        {
            "version": "0.1.0",
            "configurations": [
                {
                    "name": "Launch index.html",
                    "type": "chrome",
                    "request": "launch",
                    "url": "${fileDirname}\\index.html",
                    "webRoot": "${fileDirname}",
                    "userDataDir": "${env:SystemRoot}/temp/vscode/chrome",
                    "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
                    "runtimeArgs": [
                        "--disable-extensions", // 禁用擴充功能
                        "--disk-cache-size 0", // 將快取設為0
                        "--disable-translate " // 禁用翻譯功能
                    ]
                },
                {
                    "name": "Launch via port8080",
                    "type": "chrome",
                    "request": "launch",
                    "url": "http://localhost:8080/${fileBasename}",
                    "userDataDir": "${workspaceRoot}/.vscode/chrome",
                    "port": 9222,
                    "webRoot": "${fileDirname}",
                    "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
                    "runtimeArgs": [
                        "--remote-debugging-port=9222", 
                        "--disable-extensions", // 禁用擴充功能
                        "--disk-cache-size 0", // 將快取設為0
                        "--disable-translate " // 禁用翻譯功能
                    ]
                },
                {
                    "type": "node",
                    "request": "launch",
                    "name": "Node Debug",
                    "program": "${file}"
                }
            ]
        }