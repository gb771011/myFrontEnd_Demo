{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "chrome",
            "request": "launch",
            "url": "${file}",
            "webRoot": "${fileDirname}"
            // "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe"
        },
        {
            "name": "Launch via port8080",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/${fileBasename}",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "port": 9222,
            "webRoot": "${fileDirname}",
            "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node Debug",
            "program": "${file}"
        }

    ]
}